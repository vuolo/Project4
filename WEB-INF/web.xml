<web-app>

  <!-- General description of the Web application -->
  <display-name>
     CNT 4714 Fall 2022 Project 4
  </display-name>

  <description>
     This is the Web application for Project 4.
  </description>

  <!-- Servlet definitions and mappings  -->
  <servlet>
    <servlet-name>Client User</servlet-name>
    <description>Execute SQL queries as a client-level user.</description>
    <servlet-class>ClientUserApp</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Client User</servlet-name>
    <url-pattern>/ClientUserApp</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Root User</servlet-name>
    <description>Execute SQL queries as a root-level user.</description>
    <servlet-class>RootUserApp</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Root User</servlet-name>
    <url-pattern>/RootUserApp</url-pattern>
  </servlet-mapping>

  <!-- Data Entry Servlets -->
  <servlet>
    <servlet-name>Add Supplier Record</servlet-name>
    <description>Execute an INSERT SQL query to add a new Supplier record.</description>
    <servlet-class>AddSupplierRecord</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Add Supplier Record</servlet-name>
    <url-pattern>/AddSupplierRecord</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Add Part Record</servlet-name>
    <description>Execute an INSERT SQL query to add a new Part record.</description>
    <servlet-class>AddPartRecord</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Add Part Record</servlet-name>
    <url-pattern>/AddPartRecord</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Add Job Record</servlet-name>
    <description>Execute an INSERT SQL query to add a new Job record.</description>
    <servlet-class>AddJobRecord</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Add Job Record</servlet-name>
    <url-pattern>/AddJobRecord</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Add Shipment Record</servlet-name>
    <description>Execute an INSERT SQL query to add a new Shipment record.</description>
    <servlet-class>AddShipmentRecord</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Add Shipment Record</servlet-name>
    <url-pattern>/AddShipmentRecord</url-pattern>
  </servlet-mapping>

</web-app>